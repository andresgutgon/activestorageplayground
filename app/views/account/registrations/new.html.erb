<div>
  <% messages = [@user.errors.full_messages.first] %>
  <%= render partial: "shared/flash", locals: { messages: messages } %>

  <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
    Create your Account
  </h2>
  <p class="mt-2 text-center text-sm text-gray-600">
    Already have an account?
    <%= link_to 'Log in', login_path, class: 'font-medium text-indigo-600 hover:text-indigo-500' %>
  </p>
</div>
<%= form_with model: @user, url: signup_path, class: 'mt-8 space-y-6' do |f| %>
  <div class="rounded-md shadow-sm -space-y-px">
    <div>
      <%= f.label :name, class: "sr-only" %>
      <%= f.text_field :name, placeholder: "Your name", class: "appearance-none rounded relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
    </div>
  </div>

  <div class="rounded-md shadow-sm -space-y-px">
    <div>
      <%= f.label :email, class: "sr-only" %>
      <%= f.text_field :email, placeholder: "Your email", class: "appearance-none rounded relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
    </div>
  </div>


  <div>
    <%= f.button type: 'submit', class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
      Create account
    <% end %>
  </div>
<% end %>

