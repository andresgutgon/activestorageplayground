<h1>Sign Up</h1>

<% if @user.errors.full_messages.any? %>
  <% @user.errors.full_messages.each do |error_message| %>
    <%= error_message if @user.errors.full_messages.first == error_message %> <br />
  <% end %>
<% end %>

<%= form_with model: @user, url: signup_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :avatar %><br>
    <%= f.file_field :avatar, direct_upload: true %>
  </p>

  <p>
    <%= f.submit 'Sign Up' %>
  </p>
<% end %>
